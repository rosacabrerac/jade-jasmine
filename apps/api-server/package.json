{
  "name": "api-server",
  "version": "1.0.0",
  "description": "Node.js+Express.js server with PostgreSQL db",
  "main": "src/index.js",
  "scripts": {
    "start": "npx nodemon src/index.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "db:start": "docker compose -f ./docker-compose.yml up -d",
    "db:stop": "docker compose -f ./docker-compose.yml down",
    "db:logs": "docker compose -f ./docker-compose.yml logs -f db",
    "db:shell": "bash -c 'source .env && PGPASSWORD=\"$PGPASSWORD\" docker compose exec db psql -U \"$PGUSER\" -d \"$PGDATABASE\"'",
    "db:setup": "bash -c 'source .env && PGPASSWORD=\"$PGPASSWORD\" psql -h \"$PG_HOST\" -p \"$PGPORT\" -U \"$PGUSER\" -d \"$PGDATABASE\" < ./src/db/setup-tables.sql'",
    "dev": "npm run db:start && npm run db:setup && npm start"
  },
  "keywords": [
    "Node",
    "Expess",
    "PostgreSQL"
  ],
  "author": "jade-jasmine cohort",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-session": "^1.19.0",
    "express-validator": "^7.3.1",
    "jsonwebtoken": "^9.0.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.18.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.2",
    "@eslint/json": "^1.0.0",
    "@eslint/markdown": "^7.5.1",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "nodemon": "^3.1.11"
  }
}
